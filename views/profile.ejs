<!doctype html>
<html>
<head>
    <title>Order Ready!</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/14935d9727.js"></script>
    <link rel="stylesheet" href="style02.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Barista Profile</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOOP FOR ORDER QUEUE -->
        <div class="col-sm-6">
            <div class="well">

                <h3>Order Queue</h3>
                <ul class="messages">
                <% for(var i=0; i<messages.length; i++) {%>
                  <% if(messages[i].completed === false) {%>

                  <li class="message">
                    <span><%= messages[i].name %></span>
                    <span><%= messages[i].order %></span>
                    <span>Made By:</span>
                    <span><%= user.local.email %></span>
                    <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                  </li>
                <% } %>
                <% } %>
                </ul>
              </ul>

            </div>
        </div>




        <section id="baristaAddOrders">
          <h3>Completed orders</h3>
          <button class="clear" type="button" name="button">Clear</button></h4>


          <ul class="messages">

          <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].completed === true){ %>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].order %></span>
            </li>
          <% } %>
          </ul>
            <%}%>

        </section>

</div>

<script src="main.js"></script>

</body>
</html>
